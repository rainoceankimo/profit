<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    android:background="#8de0fd"
    tools:context="com.example.view.Main3Activity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#FF6633"
        android:gravity="center"
        android:text="註冊"
   		android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtemail"
        android:layout_alignParentLeft="true"
        android:textColor="#000000"
        android:layout_below="@+id/textView1"
        android:layout_toLeftOf="@+id/button1"
        android:gravity="center_vertical|center_horizontal"
        android:text="帳號:" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtemail"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtemail"
        android:ems="10"
        android:inputType="numberPassword"
        android:password="true"
        android:text="" />

    <EditText
        android:id="@+id/txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editText3"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtname"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtname"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText6"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editText6"
        android:ems="10"
        android:inputType="phone"
        android:text="" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText5"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editText5"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText7"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editText7"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="" />

    <EditText
        android:id="@+id/txtemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:ems="10"
        android:inputType="text"
        android:text="" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editText2"
        android:layout_toRightOf="@+id/textView2"
        android:ems="10"
        android:inputType="numberPassword"
        android:text="" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText3"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/editText2"
        android:layout_toLeftOf="@+id/editText2"
        android:textColor="#000000"
        android:gravity="center_vertical|center_horizontal"
        android:text="密碼:" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtname"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/editText3"
        android:textColor="#000000"
        android:layout_toLeftOf="@+id/editText3"
        android:gravity="center_vertical|center_horizontal"
        android:text="密碼確認:" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtname"
        android:layout_alignParentLeft="true"
        android:textColor="#000000"
        android:layout_below="@+id/textView4"
        android:layout_toLeftOf="@+id/txtname"
        android:gravity="center_vertical|center_horizontal"
        android:text="會員姓名:" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText5"
        android:layout_alignParentLeft="true"
        android:textColor="#000000"
        android:layout_alignRight="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:gravity="center_vertical|center_horizontal"
        android:text="身份證字號:" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText6"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView6"
        android:layout_toLeftOf="@+id/editText6"
        android:textColor="#000000"
        android:gravity="center_vertical|center_horizontal"
        android:text="地址:" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText7"
        android:layout_alignParentLeft="true"
        android:textColor="#000000"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignTop="@+id/editText7"
        android:gravity="center_vertical|center_horizontal"
        android:text="電話號碼:" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText8"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/editText8"
        android:layout_toLeftOf="@+id/editText8"
        android:textColor="#000000"
        android:gravity="center_vertical|center_horizontal"
        android:text="電子信箱:" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText8"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/textView8"
        android:minWidth="100dip"
        android:textColor="#000000"
        android:onClick="c_mem_register_onClick"
        android:text="註冊:" />

</RelativeLayout>