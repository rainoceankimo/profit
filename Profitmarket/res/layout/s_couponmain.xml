<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.profitmarket.S_Coupon_Management"
    android:background="#CCFFFF" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#0FFF3F"
        android:gravity="center"
        android:text="折價券管理"
        android:textColor="#000000"
        android:textSize="36sp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cmbtnb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="#66FFFF"
        android:textColor="#000000" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp" >
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/cmbtna"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:text="查看現有折價券" />

    <Button
        android:id="@+id/cmbtnb"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cmbtna"
        android:layout_alignBottom="@+id/cmbtna"
        android:layout_alignParentLeft="true"
        android:onClick="s_gocouponrules_onClick"
        android:text="設定發行規則"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnclickqr"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignParentRight="true"
        android:onClick="s_gocouponissuing_onClick"
        android:text="發行中折價券"
        android:textColor="#000000" />

  <FrameLayout
      android:id="@+id/layout_container"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/cmbtna" >

    </FrameLayout>
</RelativeLayout>