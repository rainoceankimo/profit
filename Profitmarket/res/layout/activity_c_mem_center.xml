<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lla"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8de0fd"
    android:orientation="vertical" >
       <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="36sp"
        android:textColor="#000000"
        android:gravity="center"
        android:text="會員中心" 
        android:background="#FF6633"/>
        
        
        
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="姓名:"
        android:textSize="20dip"
         android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/txtemail"
        android:gravity="center_vertical|center_horizontal"
        android:text="電子信箱:"
        android:textSize="20dip"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/textphone"
        android:layout_alignBottom="@+id/textphone"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/textView3"
        android:gravity="center_vertical|center_horizontal"
        android:text="電話號碼:"
        android:textSize="20dip"
         android:textColor="@color/black"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/QRimageshow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:layout_marginTop="25dp" />

    <Button
        android:id="@+id/btnclickqr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="#FFFFFF"
        android:onClick="c_mod_inform_onClick"
        android:text="修改會員資訊"
        android:padding="15dip" />

    <EditText
        android:id="@+id/txtname"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/txtemail"
        android:layout_alignRight="@+id/txtemail"
        android:layout_alignTop="@+id/textView3"
        android:background="#FFFFFF"
        android:ems="20"
        android:enabled="false"
         android:textColor="@color/black"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/textphone"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/txtname"
        android:layout_alignRight="@+id/txtname"
        android:layout_below="@+id/txtname"
        android:layout_marginTop="22dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:enabled="false"
         android:textColor="@color/black"
        android:inputType="phone" />

    <EditText
        android:id="@+id/txtemail"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/btnclickqr"
        android:background="#FFFFFF"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        android:textColor="@color/black" >

        <requestFocus />
    </EditText>

</RelativeLayout>