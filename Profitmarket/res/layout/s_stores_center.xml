<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCFFFF" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="店家中心"
        android:textSize="36sp"
        android:textColor="#000000"
        android:background="#0FFF3F" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scphone"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@+id/textView5"
        android:text="地址："
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/textView6"
        android:background="@color/blue20"
        android:onClick="s_merchandise_onClick"
        android:padding="15dip"
        android:text="商品管理"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnclickqr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/textView6"
        android:background="@color/blue20"
        android:onClick="s_storesinformationamend_onClick"
        android:padding="15dip"
        android:text="修改資訊"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="95dp"
        android:text="簡介"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="等待資訊中..."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/scemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/btnclickqr"
        android:ems="10"
        android:enabled="false"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="19dp"
        android:text="電子信箱："
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/scname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scemail"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/scemail"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:enabled="false"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/scname"
        android:layout_alignBottom="@+id/scname"
        android:layout_alignLeft="@+id/textView4"
        android:text="名稱："
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/scphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/scname"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/btnclickqr"
        android:enabled="false"
        android:textColor="#000000"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/scaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/btnclickqr"
        android:ems="10"
        android:enabled="false"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/scphone"
        android:layout_alignBottom="@+id/scphone"
        android:layout_toLeftOf="@+id/textView5"
        android:text="電話："
        android:textColor="#000000"
        android:textSize="20sp" />

</RelativeLayout>
