<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCFFFF" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="店家中心"
        android:textSize="36sp"
         android:textColor="#FFFFFF"
        android:background="#99BBFF" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="19dp"
        android:text="電子信箱:"
        android:background="@drawable/s_button_shape6"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnclickqr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
       android:background="@drawable/s_button_shape5"
        android:textColor="#FFFFFF"
        android:onClick="s_storesinformationamend_onClick"
        android:padding="15dip"
        android:text="修改資訊"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/scemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:background="#FFFFFF"
        android:ems="10"
        android:enabled="false"
        android:textSize="20dp"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/scaddress"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/scphone"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView3"
        android:background="#FFFFFF"
        android:ems="10"
        android:enabled="false"
         android:gravity="center"
        android:textColor="#000000"
        android:textSize="20dp" >
      
    </TextView>

    <TextView
        android:id="@+id/scname"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/scemail"
        android:layout_marginTop="32dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:enabled="false"
        android:textColor="#000000"
       android:gravity="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView6"
        android:layout_toRightOf="@+id/textView2"
        android:background="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
         android:gravity="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/scphone"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/scname"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@+id/textView2"
        android:background="#FFFFFF"
        android:ems="10"
        android:textColor="#000000"
         android:gravity="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignTop="@+id/scphone"
        android:background="@drawable/s_button_shape6"
        android:text="電話："
         android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignTop="@+id/scname"
        android:layout_toLeftOf="@+id/btnclickqr"
        android:background="@drawable/s_button_shape6"
        android:gravity="center"
        android:text="名稱："
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/scphone"
        android:layout_marginTop="37dp"
        android:layout_toLeftOf="@+id/scaddress"
        android:background="@drawable/s_button_shape6"
        android:gravity="center"
        android:text="地址："
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignRight="@+id/textView7"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="51dp"
        android:background="@drawable/s_button_shape6"
        android:gravity="center"
        android:text="簡介:"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</RelativeLayout>
