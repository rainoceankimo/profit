<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:id="@+id/lla"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8de0fd"
    tools:context="com.example.profitmarket.C_discount_use" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FF6633"
        android:gravity="center"
        android:text="折價券查看或使用"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold" />

    <LinearLayout
        android1:id="@+id/LinearLayout03"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_below="@+id/textView1"
        android1:layout_marginTop="18dp"
        android1:background="#FFCCCC" >

        <LinearLayout
            android1:layout_width="wrap_content"
            android1:layout_height="match_parent"
            android1:layout_marginLeft="10dp" >

            <TextView
                android1:id="@+id/TextView01"
                android1:layout_width="236dp"
                android1:layout_height="46dp"
                android1:gravity="center_vertical|center_horizontal"
                android1:text="會員二維圖"
                android1:textSize="26sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android1:id="@+id/button1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentRight="true"
        android1:layout_alignTop="@+id/LinearLayout03"
        android1:text="Button" />

    <LinearLayout
        android1:id="@+id/LinearLayout02"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_below="@+id/button1"
        android1:layout_marginTop="34dp"
        android1:layout_toLeftOf="@+id/button1"
        android1:background="#FFCCCC" >

        <LinearLayout
            android1:layout_width="wrap_content"
            android1:layout_height="match_parent"
            android1:layout_marginLeft="10dp" >

            <TextView
                android1:id="@+id/TextView02"
                android1:layout_width="72dp"
                android1:layout_height="wrap_content"
                android1:gravity="center_vertical|center_horizontal"
                android1:text="10"
                android1:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android1:layout_width="wrap_content"
            android1:layout_height="match_parent"
            android1:layout_marginLeft="10dp" >

            <TextView
                android1:id="@+id/TextView03"
                android1:layout_width="130dp"
                android1:layout_height="wrap_content"
                android1:gravity="center_vertical|center_horizontal"
                android1:text="元折價券"
                android1:textSize="26sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android1:id="@+id/Button01"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBottom="@+id/LinearLayout02"
        android1:layout_alignTop="@+id/LinearLayout02"
        android1:layout_toRightOf="@+id/LinearLayout02"
        android1:text="Button" />

    <LinearLayout
        android1:id="@+id/LinearLayout01"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_alignRight="@+id/LinearLayout02"
        android1:layout_below="@+id/LinearLayout02"
        android1:layout_marginTop="17dp"
        android1:background="#FFCCCC" >

        <LinearLayout
            android1:layout_width="wrap_content"
            android1:layout_height="match_parent"
            android1:layout_marginLeft="10dp" >

            <TextView
                android1:id="@+id/TextView05"
                android1:layout_width="72dp"
                android1:layout_height="wrap_content"
                android1:gravity="center_vertical|center_horizontal"
                android1:text="5"
                android1:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android1:layout_width="wrap_content"
            android1:layout_height="match_parent"
            android1:layout_marginLeft="10dp" >

            <TextView
                android1:id="@+id/TextView04"
                android1:layout_width="130dp"
                android1:layout_height="wrap_content"
                android1:gravity="center_vertical|center_horizontal"
                android1:text="元折價券"
                android1:textSize="26sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android1:id="@+id/Button02"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBottom="@+id/LinearLayout01"
        android1:layout_alignParentRight="true"
        android1:layout_alignTop="@+id/LinearLayout01"
        android1:text="Button" />

</RelativeLayout>