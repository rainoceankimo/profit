<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCFFFF"
    tools:context="com.example.profitmarket.S_Analysis" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#99BBFF"
        android:gravity="center"
        android:text="分析"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="275dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/button2"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="26dp"
        android:onClick="s_goIssueRecover_onClick"
        android:text="折價券使用率"
        android:textColor="#FFFFFF"
        android:textSize="25sp" 
        android:background="@drawable/s_button_shape"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="275dp"
        android:layout_height="80dp"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:onClick="s_goSources_onClick"
        android:text="折價券來源店家"
        android:background="@drawable/s_button_shape2"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="275dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/button2"
        android:layout_below="@+id/button2"
        android:layout_marginTop="35dp"
        android:onClick="s_goWhereabouts_onClick"
        android:text="折價券使用店家"
        android:background="@drawable/s_button_shape3"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="275dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/button3"
        android:layout_below="@+id/button3"
        android:layout_marginTop="26dp"
        android:onClick="s_goRevenue_onClick"
        android:background="@drawable/s_button_shape4"
        android:text="折價券營收貢獻"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

</RelativeLayout>
