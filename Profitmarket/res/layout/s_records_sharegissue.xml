<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCFFFF"
    android:orientation="vertical"
    tools:context="com.example.profitmarket.S_Records_ShareGet" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#99BBFF"
        android:gravity="center"
        android:text="分潤記錄(付出)"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/S_receiveDate_issue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:enabled="false"
            android:padding="8dp"
            android:textColor="#000000"
            android:textSize="25dip" />

        <Button
            android:id="@+id/S_btreceiveDate_issue"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@drawable/s_button_shape5"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:text="選擇日期" />

    </LinearLayout>
 
       

        <ListView
            android:id="@+id/android:list"
            android:layout_width="match_parent"
            android:layout_height="579dp" >
        </ListView>

   

</LinearLayout>
