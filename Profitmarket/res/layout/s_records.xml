<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCFFFF"
    tools:context="com.example.profitmarket.S_Records" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       
        android:gravity="center"
        android:text="歷史記錄及資料分析"
        android:textColor="#000000"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnclickqr"
        android:layout_width="255dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:background="@null"
        android:onClick="s_inquiretransaction_onClick"
        android:text="查詢交易記錄"
        android:textColor="#000000"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="275dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnclickqr"
        android:layout_marginTop="52dp"
        android:background="@null"
        android:onClick="s_inquireshare_onClick"
        android:text="查詢分潤記錄"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textColor="#000000"
        android:text="資料分析" />

    <Button
        android:id="@+id/button3"
        android:layout_width="275dp"
        android:layout_height="100dp"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:background="@drawable/s_analysis"
        android:onClick="s_analysis_onClick"
        android:textColor="#000000"
        android:textSize="30sp" />

</RelativeLayout>