<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    android:background="#8de0fd"
    tools:context="com.example.view.Main3Activity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#FF6633"
        android:gravity="center"
        android:text="修改會員資訊"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtemail"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/textView3"
        android:gravity="center_vertical|center_horizontal"
        android:text="電子信箱:"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText2"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignTop="@+id/editText2"
        android:gravity="center_vertical|center_horizontal"
        android:text="密碼:"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText3"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/editText3"
        android:layout_toLeftOf="@+id/editText3"
        android:gravity="center_vertical|center_horizontal"
        android:text="確認密碼:"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtname"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignTop="@+id/txtname"
        android:gravity="center_vertical|center_horizontal"
        android:text="會員姓名:"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText5"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignTop="@+id/editText5"
        android:gravity="center_vertical|center_horizontal"
        android:text="電話號碼:"
        android:textColor="#000000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnclickqr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:minWidth="100dip"
        android:text="確定"
        android:textColor="#000000"
        android:textSize="25dp"
        android:onClick="c_mem_check_onClick" />

    <EditText
        android:id="@+id/txtemail"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/editText2"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="25dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="text|textEmailAddress"
        android:textSize="20dp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/editText3"
        android:layout_below="@+id/txtemail"
        android:layout_marginTop="25dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="numberPassword|textPassword"
        android:password="true"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/txtname"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="25dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="numberPassword|textPassword"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/txtname"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/btnclickqr"
        android:layout_below="@+id/editText3"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="25dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="text|textPersonName"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/txtname"
        android:layout_below="@+id/txtname"
        android:layout_marginTop="25dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="phone|text"
        android:textSize="20dp" />

</RelativeLayout>