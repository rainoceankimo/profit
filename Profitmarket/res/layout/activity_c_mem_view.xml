<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lla"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8de0fd"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:text="會員介面" 
        android:background="#FF6633"/>
        
        
        
    </LinearLayout>

    <ImageButton
      android:contentDescription="@drawable/c_search"
        android:id="@+id/imageButton4"
        android:layout_width="130dip"
        android:layout_height="130dip"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_alignTop="@+id/imageButton3"
        android:background="@drawable/c_search"
      />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="130dip"
        android:layout_height="130dip"
        android:layout_alignLeft="@+id/imageButton1"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageButton1"
        android:layout_marginBottom="65dp"
        android:background="@drawable/c_folder"
        android:contentDescription="@drawable/c_folder" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="130dip"
        android:layout_height="130dip"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_marginLeft="16dp"
        android:layout_toEndOf="@+id/imageButton1"
        android:layout_toRightOf="@+id/imageButton1"
        android:background="@drawable/c_member"
        android:contentDescription="@drawable/c_member"
        android:onClick="c_mem_onClick" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton3"
        android:layout_alignLeft="@+id/imageButton1"
        android:layout_below="@+id/imageButton2"
        android:layout_toLeftOf="@+id/imageButton2"
        android:gravity="center_vertical|center_horizontal"
        android:text="查詢店家"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton4"
        android:layout_alignLeft="@+id/imageButton4"
        android:layout_alignRight="@+id/imageButton4"
        android:layout_alignTop="@+id/textView2"
        android:gravity="center_vertical|center_horizontal"
        android:text="會員中心"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageButton3"
        android:layout_below="@+id/imageButton4"
        android:gravity="center_vertical|center_horizontal"
        android:text="折價券查看及使用"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton4"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageButton4"
        android:layout_alignTop="@+id/textView4"
        android:gravity="center_vertical|center_horizontal"
        android:text="查詢交易紀錄"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="130dip"
        android:layout_height="130dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/c_store"
        android:contentDescription="@drawable/c_store" />

</RelativeLayout>