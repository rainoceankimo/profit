<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lla"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8de0fd"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="36sp"
        android:textColor="#000000"
        android:gravity="center"
        android:text="會員介面" 
        android:background="#FF6633"/>
        
        
        
    </LinearLayout>

    <ImageButton
        android:id="@+id/cmvibtn4"
        android:layout_width="130dip"
        android:layout_height="130dip"
        android:layout_alignLeft="@+id/cmvibtn2"
        android:layout_alignStart="@+id/cmvibtn2"
        android:layout_alignTop="@+id/cmvibtn3"
        android:background="@drawable/c_search"
        android:contentDescription="@drawable/c_search" />

    <ImageButton
        android:id="@+id/cmvibtn2"
        android:layout_width="130dip"
        android:layout_height="130dip"
        android:layout_alignTop="@+id/cmvibtn1"
        android:layout_marginLeft="40dp"
        android:layout_toEndOf="@+id/cmvibtn1"
        android:layout_toRightOf="@+id/cmvibtn1"
        android:background="@drawable/c_member"
        android:contentDescription="@drawable/c_member" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/cmvibtn4"
        android:layout_alignRight="@+id/cmvibtn4"
        android:layout_alignTop="@+id/textView2"
        android:gravity="center_vertical|center_horizontal"
        android:text="會員中心"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/cmvibtn4"
        android:layout_alignRight="@+id/cmvibtn4"
        android:layout_alignTop="@+id/textView4"
        android:gravity="center_vertical|center_horizontal"
        android:text="交易紀錄"
        android:textColor="#000000"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/cmvibtn1"
        android:layout_width="130dip"
        android:layout_height="130dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/c_store"
        android:contentDescription="@drawable/c_store" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cmvibtn1"
        android:layout_below="@+id/cmvibtn1"
        android:layout_toLeftOf="@+id/cmvibtn2"
        android:gravity="center_vertical|center_horizontal"
        android:text="查詢店家"
        android:textColor="#000000"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/cmvibtn3"
        android:layout_width="130dip"
        android:layout_height="130dip"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="35dp"
        android:background="@drawable/c_folder"
        android:contentDescription="@drawable/c_folder" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cmvibtn3"
        android:layout_alignRight="@+id/cmvibtn3"
        android:layout_below="@+id/cmvibtn3"
        android:gravity="center_vertical|center_horizontal"
        android:text="折價券"
        android:textColor="#000000"
        android:textSize="30sp" />

</RelativeLayout>