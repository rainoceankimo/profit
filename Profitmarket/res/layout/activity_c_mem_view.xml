<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lla"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8de0fd"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           android:background="#FF6633"
            android:gravity="center"
            
            android:textColor="#000000"
            android:textSize="36sp"
          />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/cmvibtn2"
        android:layout_alignRight="@+id/cmvibtn2"
        android:gravity="center_vertical|center_horizontal"
        android:text="會員中心"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/cmvibtn1"
        android:layout_below="@+id/cmvibtn1"
        android:gravity="center_vertical|center_horizontal"
        android:text="查詢店家"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/cmvibtn1"
        android:layout_width="160dip"
        android:layout_height="160dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dip"
        android:background="@drawable/c_store"
        android:contentDescription="@drawable/c_store" />

    <ImageButton
        android:id="@+id/cmvibtn4"
        android:layout_width="160dip"
        android:layout_height="160dip"
        android:layout_alignBottom="@+id/cmvibtn3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignTop="@+id/cmvibtn3"
        android:background="@drawable/c_search"
        android:contentDescription="@drawable/c_search" />

    <ImageButton
        android:id="@+id/cmvibtn2"
        android:layout_width="160dip"
        android:layout_height="160dip"
        android:layout_alignBottom="@+id/cmvibtn1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dip"
        android:background="@drawable/c_member"
        android:contentDescription="@drawable/c_member" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cmvibtn3"
        android:layout_below="@+id/cmvibtn3"
        android:gravity="center_vertical|center_horizontal"
        android:text="折價券查看及使用"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/cmvibtn4"
        android:layout_below="@+id/cmvibtn4"
        android:layout_toRightOf="@+id/textView4"
        android:gravity="center_vertical|center_horizontal"
        android:text="查詢交易紀錄"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/cmvibtn3"
        android:layout_width="160dip"
        android:layout_height="160dip"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="45dip"
        android:background="@drawable/c_folder"
        android:contentDescription="@drawable/c_folder" />

</RelativeLayout>