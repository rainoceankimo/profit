<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lla"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8de0fd"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FF6633"
            android:gravity="center"
            android:text="會員介面"
            android:textColor="#000000"
            android:textSize="36sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignRight="@+id/imageButton2"
        android:gravity="center_vertical|center_horizontal"
        android:text="會員中心"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageButton1"
        android:layout_below="@+id/imageButton1"
        android:gravity="center_vertical|center_horizontal"
        android:text="查詢店家"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="120dip"
        android:layout_height="150dip"
        android:layout_alignLeft="@+id/imageButton1"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="14dp"
        android:background="@drawable/c_folder"
        android:contentDescription="@drawable/c_folder"
        android:onClick="c_use_onClick" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="150dip"
        android:layout_height="200dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:background="@drawable/c_store"
        android:contentDescription="@drawable/c_store"
        android:onClick="c_sstore__onClick" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/imageButton4"
        android:gravity="center_vertical|center_horizontal"
        android:text="查詢交易紀錄"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="120dip"
        android:layout_height="100dip"
        android:layout_alignBottom="@+id/imageButton3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignTop="@+id/imageButton3"
        android:background="@drawable/c_search"
        android:contentDescription="@drawable/c_search"
        android:onClick="C_research_onClick" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageButton3"
        android:gravity="center_vertical|center_horizontal"
        android:text="折價券查看及使用"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="120dip"
        android:layout_height="150dip"
        android:layout_alignBottom="@+id/imageButton1"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="19dp"
        android:layout_marginRight="19dp"
        android:background="@drawable/c_member"
        android:contentDescription="@drawable/c_member"
        android:onClick="c_mem_onClick" />

</RelativeLayout>