<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        
        <shape>

            <gradient
                android:startColor="#5599FF"
                android:centerColor="#5599FF"
                android:endColor="#5599FF"
                android:angle="270" />
   <stroke
                android:width="1dp"
                android:color="#2f6699" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
 <item android:state_pressed="true" >
        <shape>
            <solid
    android:color="#449def" />
            <stroke
                android:width="1dp"
                android:color="#2f6699" />
            <corners
    android:radius="2dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>